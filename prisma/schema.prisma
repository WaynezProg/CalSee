generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Meal {
  id            String     @id @default(cuid())
  userId        String
  timestamp     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  photoId       String?
  // DERIVED FIELDS: cached for query/sort performance only.
  // TRUE SOURCE: sum of MealItem nutrition values.
  totalCalories Float?
  totalProtein  Float?
  totalCarbs    Float?
  totalFat      Float?

  items         MealItem[]
  createdAt     DateTime   @default(now())

  @@index([userId])
  @@index([userId, timestamp])
  @@map("meals")
}

model MealItem {
  id              String   @id @default(cuid())
  mealId          String
  foodName        String
  portionSize     Float
  portionUnit     String
  containerSize   String?
  aiEstimatedCount Float?
  aiEstimatedWeightGrams Float?
  calories        Float?
  protein         Float?
  carbs           Float?
  fat             Float?
  confidence      Float?
  notes           String?
  nutritionSource String?

  // Extended nutrition fields
  fiber           Float?
  sugar           Float?
  saturatedFat    Float?
  sodium          Float?
  potassium       Float?
  calcium         Float?
  iron            Float?
  vitaminA        Float?
  vitaminC        Float?
  vitaminD        Float?
  vitaminB12      Float?
  cholesterol     Float?

  // Beverage options
  category        String?  // 'food' | 'beverage' | 'soup' | 'dessert'
  sugarLevel      String?  // 'full' | 'less' | 'half' | 'light' | 'none'
  iceLevel        String?  // 'normal' | 'less' | 'light' | 'none' | 'warm' | 'hot'
  baseSugar       Float?   // Original AI-estimated sugar value for percentage calculation

  meal            Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)

  @@index([mealId])
  @@map("meal_items")
}

model Photo {
  id            String   @id @default(cuid())
  userId        String
  mealId        String?
  mainPhotoKey  String
  thumbnailKey  String
  mainPhotoSize Int
  thumbnailSize Int
  mimeType      String
  width         Int?
  height        Int?
  uploadedAt    DateTime @default(now())

  @@index([userId])
  @@index([mealId])
  @@map("photos")
}
